RewriteEngine on

# Exclude existing files and directories from the rewrite rule
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Block access to specific file types (e.g., .php, .inc, .config)
#<FilesMatch "\.(php|inc|config)$">
#    Order allow,deny
#    Deny from all
#</FilesMatch>

# Set MIME types for JavaScript files
AddType application/javascript .js
AddType application/javascript-module .mjs

